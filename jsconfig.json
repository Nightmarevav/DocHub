{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "jsx": "preserve",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitThis": false,
    "paths": {
      "@/*": ["./src/*"]
    },
    "sourceMap": true,
    "strict": true,
    "target": "es2020",
    "types": [
      "vuetify",
    ]
  },
  "include": [
    "./src/**/*"
  ]
}